   <style>
  .table td, .table th { vertical-align: middle; }
</style>

{{#if data}}
  <h2>Lista de Productos</h2>
  <div class="table-responsive">
    <table class="table table-dark">
      <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Foto</th>
      </tr>
      {{! Recorrer productos para mostrar en la tabla }}
      {{#each data}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.price}}</td>
          <td>{{this.thumbnail}}</td>
        </tr>
      {{/each}}
    </table>
  </div>
{{/if}}